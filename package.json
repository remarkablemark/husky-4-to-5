{
  "name": "husky-4-to-5",
  "version": "1.5.0",
  "description": "Migrates husky 4 to 9.",
  "author": "Mark <mark@remarkablemark.org>",
  "bin": "lib/bin.js",
  "scripts": {
    "build": "tsc -p src/tsconfig.json",
    "clean": "rm -rf lib",
    "lint": "eslint --ignore-path .gitignore .",
    "lint:fix": "npm run lint -- --fix",
    "lint:tsc": "tsc -p src/tsconfig.json --noEmit",
    "prepare": "husky",
    "prepublishOnly": "npm run lint && npm run lint:tsc && npm run clean && npm run build",
    "test": "npm run clean && npm run build && jest --detectOpenHandles",
    "test:watch": "npm test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/remarkablemark/husky-4-to-5"
  },
  "bugs": {
    "url": "https://github.com/remarkablemark/husky-4-to-5/issues"
  },
  "keywords": [
    "husky-4-to-5",
    "husky-4-to-6",
    "husky-4-to-7",
    "husky-4-to-8",
    "husky",
    "migration",
    "cli"
  ],
  "devDependencies": {
    "@commitlint/cli": "18.6.0",
    "@commitlint/config-conventional": "18.6.0",
    "@types/jest": "29.5.11",
    "@types/node": "20.11.10",
    "@typescript-eslint/eslint-plugin": "6.19.1",
    "@typescript-eslint/parser": "6.19.1",
    "eslint": "8.56.0",
    "eslint-plugin-prettier": "5.1.3",
    "husky": "9.0.6",
    "jest": "29.7.0",
    "lint-staged": "15.2.0",
    "prettier": "3.2.4",
    "ts-jest": "29.1.2",
    "typescript": "5.3.3"
  },
  "files": [
    "/lib"
  ],
  "license": "MIT"
}
