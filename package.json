{
  "name": "husky-4-to-5",
  "version": "1.5.2",
  "description": "Migrates husky 4 to 9.",
  "author": "Mark <mark@remarkablemark.org>",
  "bin": "lib/bin.js",
  "scripts": {
    "build": "tsc -p src/tsconfig.json",
    "clean": "rm -rf lib",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "lint:tsc": "tsc -p src/tsconfig.json --noEmit",
    "prepare": "husky",
    "prepublishOnly": "npm run lint && npm run lint:tsc && npm run clean && npm run build",
    "test": "npm run clean && npm run build && jest --detectOpenHandles",
    "test:watch": "npm test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/remarkablemark/husky-4-to-5"
  },
  "bugs": {
    "url": "https://github.com/remarkablemark/husky-4-to-5/issues"
  },
  "keywords": [
    "husky-4-to-5",
    "husky-4-to-6",
    "husky-4-to-7",
    "husky-4-to-8",
    "husky",
    "migration",
    "cli"
  ],
  "devDependencies": {
    "@commitlint/cli": "20.2.0",
    "@commitlint/config-conventional": "20.2.0",
    "@eslint/compat": "2.0.0",
    "@eslint/eslintrc": "3.3.3",
    "@eslint/js": "9.39.1",
    "@types/jest": "30.0.0",
    "@types/node": "25.0.1",
    "@typescript-eslint/eslint-plugin": "8.49.0",
    "@typescript-eslint/parser": "8.49.0",
    "eslint": "9.39.2",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "lint-staged": "16.2.7",
    "prettier": "3.7.4",
    "ts-jest": "29.4.6",
    "ts-node": "10.9.2",
    "typescript": "5.9.3"
  },
  "files": [
    "/lib"
  ],
  "license": "MIT"
}
